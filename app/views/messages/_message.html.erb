<div id="<%= dom_id message %>">
  <p>
    <strong>Body:</strong>
    <%= message.body %>
  </p>
  <%= link_to "Show this message", message %>
  <div id="edit_message">
    <%= button_to "Edit", edit_message_url(message), method: :post %>
  </div>

  <span>
    <%= button_to "Delete Message", message_url(message), method: :delete %>
  </span>
</div>
